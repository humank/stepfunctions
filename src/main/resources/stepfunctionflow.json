{
  "Comment": "Create EC2 instances by SpotRequest, if fail create On-demand instances instead. Finally send SNS to notify.",
  "StartAt": "RequestSpot",
  "States": {
    "RequestSpot": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:ap-northeast-1:584518143473:function:RequestSpotHandler",
      "Next": "RequestState"
    },
    "RequestState": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.output.result",
          "StringEquals": "FAIL",
          "Next": "RequestSpotFail"
        },
        {
          "Variable": "$.output.result",
          "StringEquals": "SUCCESS",
          "Next": "RequestSpotSuccess"
        }
      ],
      "Default": "NotHandled"
    },
    "RequestSpotFail": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:REGION:ACCOUNT_ID:function:OnFirstMatch",
      "Next": "ResultNotify"
    },
    "RequestSpotSuccess": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:REGION:ACCOUNT_ID:function:OnSecondMatch",
      "Next": "ResultNotify"
    },
    "NotHandled": {
      "Type": "Fail",
      "Error": "NotHandledError",
      "Cause": "No Matches!"
    },
    "ResultNotify": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:REGION:ACCOUNT_ID:function:FUNCTION_NAME",
      "End": true
    }
  }
}
